<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Panel</title>
  </head>
  <body>
    <h1>Admin Panel</h1>

    <% if (page === 'index') { %>
    <!-- HTML-код для главной страницы административной панели -->
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Is Admin</th>
          <!-- Другие заголовки столбцов по желанию -->
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.isAdmin %></td>
          <!-- Другие ячейки данных по желанию -->
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else if (page === 'addUser') { %>
    <!-- HTML-код для страницы добавления пользователя -->
    <form action="/admin/addUser" method="POST">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required />
      <br />
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required />
      <br />
      <label for="isAdmin">Is Admin:</label>
      <input type="checkbox" id="isAdmin" name="isAdmin" />
      <br />
      <button type="submit">Add User</button>
    </form>
    <% } else if (page === 'editUser') { %>
    <!-- HTML-код для страницы редактирования пользователя -->
    <!-- HTML-код для страницы редактирования пользователя -->
    <form method="POST" action="/admin/editUser">
      <select name="userId">
        <% users.forEach(user => { %>
        <option value="<%= user._id %>"><%= user.username %></option>
        <% }); %>
      </select>
      <br />
      <label for="username">New Username:</label>
      <input type="text" id="username" name="username" required />
      <br />
      <label for="password">New Password:</label>
      <input type="password" id="password" name="password" required />
      <br />
      <label for="confirmPassword">Confirm New Password:</label>
      <input
        type="password"
        id="confirmPassword"
        name="confirmPassword"
        required
      />
      <br />
      <label for="isAdmin">Is Admin:</label>
      <input type="checkbox" id="isAdmin" name="isAdmin" />
      <br />
      <button type="submit">Edit User</button>
    </form>
    <script>
      document
        .querySelector("form")
        .addEventListener("submit", function (event) {
          const isAdminCheckbox = document.getElementById("isAdmin");
          if (isAdminCheckbox.checked) {
            isAdminCheckbox.value = "true"; // Устанавливаем значение 'true', когда чекбокс отмечен
          } else {
            isAdminCheckbox.value = "false"; // Устанавливаем значение 'false', когда чекбокс не отмечен
          }
        });
    </script>
    <% } %>
  </body>
</html>
